{
  "env": {
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      },
      "moduleDirectory": [
        "node_modules",
        "src/"
      ],
      "alias": {
        "map": [
          [
            "@",
            "./src"
          ]
        ],
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  },
  //	"parserOptions": {
  //		"ecmaVersion": 6,
  //		"sourceType": "module",
  //		"ecmaFeatures": {
  //			"jsx": true
  //		}
  //	},
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "prettier"
  ],
  "rules": {
    "semi": 2
  }
}